{
    "name": "Echo360 Downloader",
    "description": "Download videos on echo360",
    "manifest_version": 3,
    "version": "1.0",
    "icons": {
        "128": "images/logo.png"
    },
    "permissions": [
        "cookies",
        "scripting",
        "activeTab",
        "downloads"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "*://*.echo360.ca/"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "images/logo.png"
        }
    }
}